@{
    ViewBag.Title = "GetContacts";
}

<h2>Contacts</h2>

<button id="btnAdd" class="btn btn-primary">Create New</button>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="tblBody">
        <!-- Contacts will be loaded here via AJAX -->
    </tbody>
</table>

<!-- Modal container for partial views -->
<div id="modalContainer"></div>

@section Scripts {
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/MyCrud.js"></script> 
    <script>
        $(document).ready(function () {
            loadItems();
        });
    </script>
}
